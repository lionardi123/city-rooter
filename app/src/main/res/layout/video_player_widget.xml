<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_player_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_10"
    app:cardElevation="0dp">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/video_thumbnail"
        android:scaleType="fitXY" />
    
    <ImageView
        android:layout_width="@dimen/btn_play_yt_width"
        android:layout_height="@dimen/btn_play_yt_height"
        android:layout_gravity="center"
        android:src="@drawable/ic_icons8_play_button"
        app:tint="@color/black"
        android:alpha="0.6"
        android:scaleType="fitXY"
        />

</androidx.cardview.widget.CardView>