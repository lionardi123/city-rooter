<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/selling_points_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_10"
    android:layout_margin="@dimen/space_s"
    android:elevation="8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_ml">
        
        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selling_points_image_height"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_ml"
            android:paddingEnd="@dimen/space_ml"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textAllCaps="true"
            tools:text="PELAYANAN CEPAT"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/space_xl"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>
        
        <View
            android:layout_width="@dimen/selling_points_separator_width"
            android:layout_height="@dimen/selling_points_separator_height"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue_light"
            android:paddingStart="@dimen/space_ml"
            android:paddingEnd="@dimen/space_ml"
            android:layout_marginTop="@dimen/space_s" />

        <TextView
            android:id="@+id/itemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_ml"
            android:paddingEnd="@dimen/space_ml"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/space_l"
            android:ellipsize="end"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>